{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/layout/*": [
        "components/layout/*"
      ],
      "@/ui/*": [
        "components/ui/*"
      ],
      "@/screens/*": [
        "components/screens/*"
      ],
      "@/assets/*": [
        "'@/app/assets/*"
      ],
      "@/components/*": [
        "app/components/*"
      ],
      "@/public/*": [
        "public/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
